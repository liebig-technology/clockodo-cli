{
  "name": "@liebig-technology/clockodo-cli",
  "version": "0.2.1",
  "description": "AI-friendly CLI for the Clockodo time tracking API",
  "type": "module",
  "bin": {
    "clockodo": "./dist/index.js"
  },
  "files": [
    "dist",
    "!dist/*.map"
  ],
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsx src/index.ts",
    "typecheck": "tsc --noEmit",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "pnpm build",
    "prepare": "husky"
  },
  "keywords": [
    "clockodo",
    "time-tracking",
    "cli",
    "api"
  ],
  "license": "MIT",
  "author": "Florian Liebig",
  "repository": {
    "type": "git",
    "url": "https://github.com/liebig-technology/clockodo-cli"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "dependencies": {
    "@clack/prompts": "^1.0.1",
    "cli-table3": "^0.6.5",
    "clockodo": "^28.0.1",
    "commander": "^14.0.3",
    "conf": "^15.1.0",
    "date-fns": "^4.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.3",
    "@types/node": "^22.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "lint-staged": {
    "*": [
      "biome check --write --no-errors-on-unmatched --files-ignore-unknown=true"
    ]
  }
}
